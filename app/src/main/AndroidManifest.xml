<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.maryang.theredhouse">

    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission android:name="android.permission.ACCESS_NETWORK_STATE" />
    <uses-permission android:name="android.permission.ACCESS_WIFI_STATE" />

    <application
        android:name="com.maryang.theredhouse.ui.base.BaseApplication"
        android:allowBackup="false"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:theme="@style/Theme.TheRedHouse.NoActionBar">
        <activity android:name="com.maryang.theredhouse.ui.splash.SplashActivity">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name="com.maryang.theredhouse.ui.signup.SignupActivity"
            android:windowSoftInputMode="adjustResize" />
        <activity android:name="com.maryang.theredhouse.ui.list.HouseListActivity" />
        <activity android:name="com.maryang.theredhouse.ui.detail.HouseDetailActivity" />
        <activity android:name="com.maryang.theredhouse.ui.upload.UploadTypeActivity" />
        <activity
            android:name="com.maryang.theredhouse.ui.upload.UploadInfoActivity"
            android:windowSoftInputMode="adjustResize" />
        <activity
            android:name="com.maryang.theredhouse.ui.upload.UploadContactActivity"
            android:windowSoftInputMode="adjustResize" />
    </application>

</manifest>
